<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F1F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backToProfileFromNewConsumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="â—€"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingHorizontal="32dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Novo Consumo"
                android:textColor="#000000"
                android:textSize="34sp" />

            <EditText
                android:id="@+id/consumptionField"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="18dp"
                android:background="#1A898989"
                android:ems="10"
                android:hint="Consumo em KW (apenas numeros)"
                android:inputType="numberDecimal"
                android:padding="8dp" />

            <Button
                android:id="@+id/addNewConsumptionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3232D3"
                android:text="Cadastrar"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
